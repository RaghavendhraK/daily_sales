{{> header}}
{{> navbar}}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/items">Items</a></li>
        <li class="active">{{^item._id}}Add{{/item._id}}{{#item._id}}Edit{{/item._id}} Item</li>
      </ol>
      <h2 class="sub-header">{{^item._id}}Add{{/item._id}}{{#item._id}}Edit{{/item._id}} Item</h2>
      <div class="row">
        <div class="col-md-6">
          <form method="post" action="{{^item._id}}/add-item{{/item._id}}{{#item._id}}/edit-item/{{.}}{{/item._id}}" role="form">
            {{> flash_message}}
            <input type="hidden" name="_csrf" value="{{csrf_token}}">
            <fieldset>
              <div class="form-group">
                <label for="item_name">Item name</label>
                <input required="required" type="text" value="{{item.item_name}}" class="form-control" id="item_name" name="item_name" placeholder="Item name">
              </div>
              <div class="form-group">
                <label for="item_type">Item type</label>
                <select id="item_type" name="item_type">
                  {{#item_types}}
                  <option value="{{key}}" {{#selected}}SELECTED="SELECTED"{{/selected}}>{{value}}</option>
                  {{/item_types}}
                </select>
              </div>
              <div class="form-group">
                <label for="rate">Rate</label>
                <input required="required" type="number" value="{{item.rate}}" class="form-control" id="rate" name="rate" placeholder="Rate" step="any">
              </div>
              <div class="form-group">
                <label for="unit">Unit</label>
                <input required="required" type="text" value="{{item.unit}}"  class="form-control" id="unit" name="unit" placeholder="Unit like Ltr, ml, kg,..">
              </div>
              <div class="form-group">
                <label for="display_order">Display Order</label>
                <input type="number" value="{{item.display_order}}"  class="form-control" id="display_order" name="display_order" placeholder="Display Order">
              </div>
            </fieldset>
            <div class="pull-right slight-margin">
              <a href="/items" class="btn btn-default cancel">Cancel</a>
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{> footer}}