{{> header}}
{{> navbar}}
<div class="container mtLarge">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><a href="/">Dashboard</a></li>
        <li class="active">Sales</li>
      </ol>
      <div class="row">
        <div class="col-md-10">
          <h2 class="page-header align-header">Step 2 Fuels :: Sales</h2>
          {{> flash_message}}
          <form id="fuel_sales" action="/sales/fuels/{{ds_id}}" method="POST">
            <div class="row well">
              <table class="table">
                <thead>
                  <th style="text-align:center">Item</th>
                  <th style="text-align:center">Opening</th>
                  <th style="text-align:center">Closing</th>
                  <th style="text-align:center">Testing</th>
                  <th style="text-align:center">Sales</th>
                  <th style="text-align:center">Rate</th>
                  <th style="text-align:center">Amount</th>
                </thead>
                <tbody>
                  {{#fuels}}
                  <tr>
                    <td>{{item_name}}</td>
                    <td><input data-item_id="{{_id}}" class="form-control fuel_opening_reading" type="text" {{^isOpeningEditable}}readonly="true"{{/isOpeningEditable}} name="items[{{_id}}][opening]" value="{{opening}}" required="true"/></td>
                    <td><input data-item_id="{{_id}}" class="form-control fuel_closing_reading" type="text" name="items[{{_id}}][closing]" value="{{closing}}" required="true"/></td>
                    <td><input data-item_id="{{_id}}" class="form-control fuel_testing_reading" type="text" name="items[{{_id}}][testing]" value="{{testing}}" required="true"/></td>
                    <td><input data-item_id="{{_id}}" class="form-control fuel_sales" type="text" readonly="true" name="items[{{_id}}][sales]" value="{{sales}}"/></td>
                    <td><input data-item_id="{{_id}}" class="form-control fuel_rate" type="text" name="items[{{_id}}][rate]" value="{{rate}}" required="true"/></td>
                    <td><input data-item_id="{{_id}}" class="form-control fuel_amount" type="text" readonly="true" name="items[{{_id}}][amount]" value="{{amount}}"/></td>
                    <input type="hidden" name="items[{{_id}}][item_name]" value="{{item_name}}">
                    <input type="hidden" name="items[{{_id}}][item_type]" value="{{item_type}}">
                    <input type="hidden" name="items[{{_id}}][_id]" value="{{_id}}">
                    <input type="hidden" name="items[{{_id}}][isOpeningEditable]" value="{{isOpeningEditable}}">
                  </tr>
                  {{/fuels}}
                  <tfoot>
                    <tr>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td style="text-align:center"><strong>Total</strong></td>
                      <td><input class="form-control" id="fuel_total" type="text" readonly="true" name="fuel_total"/></td>
                      <input type="hidden" name="dsId" value="{{ds_id}}">
                    </tr>
                  </tfoot>
                </tbody>
              </table>
            </div>
            <div class="row">
              <button type="submit" class="btn btn-primary pull-right">Next</button>
            </div>
          </form>
        </div>
        <div class="col-md-2">
          {{> sales_steps}}
        </div>
      </div>
    </div>
  </div>
</div>
{{> footer}}