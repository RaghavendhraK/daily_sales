{{> header}}
{{> navbar}}
<div class="container mtLarge">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><a href="/">Dashboard</a></li>
        <li class="active">Sales</li>
      </ol>
      <div class="row">
        <div class="col-md-10">
          <h2 class="page-header align-header">Step 1 Cashier/Date/Shift :: Sales</h2>
          {{> flash_message}}
          <form action="/sales/step1" method="POST">
            <div class="row well">
              <div class="col-md-4">
                <label>Cashier</label>
                <div class="input-group">
                  <select required="required" name="cashier" class="form-control">
                    <option value="">--Select--</option>
                    {{#cashiers}}
                    <option {{#selected}}SELECTED="SELECTED"{{/selected}} value="{{_id}}">{{staff_name}}</option>
                    {{/cashiers}}
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <label>Date</label>
                <div class="datepicker input-group date">
                  <input type="text" class="form-control" value="{{date}}" required="required" name="date">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                </div>
              </div>
              <div class="col-md-4">
                <label>Shift</label>
                <div class="input-group">
                  <select name="shift" class="form-control" required="required">
                    {{#shifts}}
                    <option {{#selected}}SELECTED="SELECTED"{{/selected}} value="{{key}}">{{value}}</option>
                    {{/shifts}}
                  </select>
                </div>
              </div>
            </div>
            <div class="row">
              <button type="submit" class="btn btn-primary pull-right">Next</button>
            </div>
          </form>
        </div>
        {{#ds_id}}
        <div class="col-md-2">
          {{> sales_steps}}
        </div>
        {{/ds_id}}
      </div>
    </div>
  </div>
</div>
{{> footer}}