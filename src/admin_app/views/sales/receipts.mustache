{{> header}}
{{> navbar}}
<div class="container mtLarge">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><a href="/dashboard">Dashboard</a></li>
        <li class="active">Receipts</li>
      </ol>
      <div class="row">
        <div class="col-md-10">
          <h2 class="page-header align-header">Step 6 Receipts :: Sales</h2>
          {{> flash_message}}
          <form id="expense_sales" action="/sales/receipts/{{ds_id}}" method="POST">
            <div class="row well">
              <table class="table">
                <thead>
                  <th style="text-align:center">Receipts</th>
                  <th style="text-align:center">Info</th>
                  <th style="text-align:center">Reference No.</th>
                  <th style="text-align:center">Amount</th>
                </thead>
                <tbody>
                  {{#receipts}}
                  <tr>
                    <td>{{account_name}}</td>
                    <td><input data-item_id="{{_id}}" class="form-control" type="text" placeholder="Add info(optional)" name="accounts[{{_id}}][info]" value="{{info}}"/></td>
                    <td><input data-item_id="{{_id}}" class="form-control" type="text" placeholder="Reference no(optional)" name="accounts[{{_id}}][ref_no]" value="{{ref_no}}"/></td>
                    <td><input data-item_id="{{_id}}" class="form-control expense_amount" type="text" name="accounts[{{_id}}][amount]" value="{{amount}}"/></td>
                    <input type="hidden" name="accounts[{{_id}}][account_name]" value="{{account_name}}">
                    <input type="hidden" name="accounts[{{_id}}][account_type]" value="{{account_type}}">
                    <input type="hidden" name="accounts[{{_id}}][_id]" value="{{_id}}">
                  </tr>
                  {{/receipts}}
                  <tfoot>
                    <tr>
                      <td></td>
                      <td></td>
                      <td style="text-align:center"><strong>Total</strong></td>
                      <td><input class="form-control" id="expense_total" type="text" readonly="true" name="receipt_total"/></td>
                      <input type="hidden" name="dsId" value="{{ds_id}}">
                    </tr>
                  </tfoot>
                </tbody>
              </table>
            </div>
            <div class="row">
              <button type="submit" class="btn btn-primary pull-right">Next</button>
            </div>
          </form>
        </div>
        <div class="col-md-2">
          {{> sales_steps}}
        </div>
      </div>
    </div>
  </div>
</div>
{{> footer}}