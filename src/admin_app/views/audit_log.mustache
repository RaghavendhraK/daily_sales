{{> header}}
{{> navbar}}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><a href="/">Dashboard</a></li>
        <li class="active">Audit logs</li>
      </ol>
      <h2 class="sub-header">Audit logs</h2>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group well filter">
            <form class="form-inline" role="form" action="audit-logs">
              <input type="hidden" name="page" value="1"/>
              <div class="form-group">
                <label for="customer">Filter By: Customer</label>
                <select id="customer" name="custId">
                  <option value="">-Select-</option>
                  {{#customers}}
                  <option value="{{_id}}" {{#selected}}selected="selected"{{/selected}}>
                    {{{name}}}
                  </option>
                  {{/customers}}
                </select>
              </div>
              <div class="form-group">
                <label for="user">User</label>
                <select id="user" name="userId">
                  <option value="">-Select-</option>
                  {{#users}}
                  <option value="{{_id}}" {{#selected}}selected="selected"{{/selected}}>
                    {{first_name}} {{last_name}}
                  </option>
                  {{/users}}
                </select>
              </div>
              <div class="form-group">
                <a href="javascript:void(0)" class="rangepicker">
                  Filter
                  <small>({{date_range}})</small><br />
                </a>
                <input type="hidden" name="from" value="{{fromDate}}"/>
                <input type="hidden" name="to" value="{{toDate}}"/>
              </div>
              <input class="btn btn-sm btn-primary" type="submit" value="Search"/>
            </form>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          {{> audit_logs_list}}
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          {{#pages}}{{> pagination}}{{/pages}}
        </div>
      </div>
    </div>
  </div>
</div>
{{> footer}}